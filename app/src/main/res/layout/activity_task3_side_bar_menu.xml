<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/DrawerLayout_task3"
    tools:context=".Task3SideBarMenu">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <include
            layout="@layout/app_bar_task3"
            ></include>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:textSize="50sp"
            ></TextView>

        <TextView
            android:id="@+id/NAME_task3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME"
            android:layout_marginTop="120dp"
            android:layout_gravity="center"
            ></TextView>



        <TextView
            android:id="@+id/CONTACT_task3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONTACT"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            ></TextView>



    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_gravity="start|left"
        android:id="@+id/navigationView_task3"
        app:headerLayout="@layout/header_navigation_task3"
        app:menu="@menu/menu_for_navigation_view_task3"
        ></com.google.android.material.navigation.NavigationView>



</androidx.drawerlayout.widget.DrawerLayout>